@model Examen.ApplicationCore.Domain.PretLivre

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PretLivre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonne" class="control-label"></label>
                <select asp-for="AbonneFK" class="form-control" asp-items="ViewBag.Abonnes">
                    <option>Selectionner un abonné</option>
                </select>
                <span asp-validation-for="AbonneFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livre" class="control-label"></label>
                <select asp-for="LivreFK" class="form-control" asp-items="ViewBag.Livres">
                    <option>Selectionner un livre</option>
                </select>
                <span asp-validation-for="LivreFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
